{{!< auth}}
<title>Đăng Nhập - Hệ Thống Quản Lý Tiến Độ Học Tập</title>

<style>
    body {
        background: linear-gradient(150deg, #667eea, #764ba2, #667eea, #764ba2);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-container {
        max-width: 500px;
        padding: 30px;
        background: white;
        border-radius: 10px;
        box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.3);
        text-align: center;
    }

    .login-header {
        font-size: 24px;
        font-weight: bold;
        color: #764ba2;
        margin-bottom: 30px;
    }

    .card {
        border: none;
        border-radius: 15px;
        transition: 0.3s;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }

    .icon-box {
        font-size: 2rem;
        margin-bottom: 10px;
    }
</style>

<body>
    <div class="login-container">
        <div class="login-header">Hệ Thống Hỗ Trợ Quản Lý Tiến Độ Học Tập</div>

        <div class="d-flex justify-content-center gap-3">
            <a href="/login-user" class="text-decoration-none text-dark" style="flex: 1;">
                <div class="card p-4 text-center shadow-sm">
                    <div class="icon-box text-primary"><i class="fas fa-user"></i></div>
                    <h6 class="mt-2">User</h6>
                </div>
            </a>

            <a href="/login-admin" class="text-decoration-none text-dark" style="flex: 1;">
                <div class="card p-4 text-center shadow-sm">
                    <div class="icon-box text-primary"><i class="fas fa-user-shield"></i></div>
                    <h6 class="mt-2">Admin</h6>
                </div>
            </a>
        </div>
    </div>
</body>
</html>
