<div class="dashboard-header">
  <h2 class="dashboard-title mb-0"><i class="fas fa-file me-2"></i> Tài Liệu Tham Khảo</h2>

  <div class="user-info dropdown">
    <img src="{{user.avatar}}" alt="Avatar" class="user-avatar dropdown-toggle"
         onerror="this.onerror=null;this.src='/img/avatar.png';"
         id="avatarDropdown" data-bs-toggle="dropdown" aria-expanded="false" />

    <span class="user-name">{{user.username}}</span>

    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="avatarDropdown">
      <li><a class="dropdown-item" href="/account"><i class="fas fa-user-edit me-2"></i>Chỉnh sửa thông tin</a></li>
      <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
    </ul>
  </div>
</div>

<main class="container mt-4">
  {{#if errorMessage}}
    <div class="alert alert-danger">{{errorMessage}}</div>
  {{/if}}

  <div class="row g-4">
    <!-- Form upload -->
    <div class="col-md-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-primary text-white">
          <strong><i class="fas fa-upload me-2"></i>Tải lên tài liệu mới</strong>
        </div>
        <div class="card-body">
          <form action="/document/upload" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="title" class="form-label">Tên tài liệu</label>
              <input type="text" id="title" name="title" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="file" class="form-label">Chọn tệp</label>
              <input type="file" id="file" name="file" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-success w-100">
              <i class="fas fa-upload me-1"></i> Tải lên
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Danh sách tài liệu -->
    <div class="col-md-8">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-dark text-white">
          <strong><i class="fas fa-list me-2"></i>Danh sách tài liệu</strong>
        </div>
        <div class="card-body p-0">
          <table class="table table-striped table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th style="width: 40%">Tiêu đề</th>
                <th>Ngày tải lên</th>
                <th class="text-center">Xem</th>
                <th class="text-center">Xóa</th>
              </tr>
            </thead>
            <tbody>
              {{#each documents}}
                <tr>
                  <td>{{this.title}}</td>
                  <td class="text-muted">{{this.createdAt}}</td>
                  <td class="text-center">
                    <a href="/file/{{this.file}}" target="_blank" class="btn btn-sm btn-outline-primary">
                      <i class="fas fa-eye me-1"></i> {{!Xem}}
                    </a>
                  </td>
                  <td class="text-center">
                    <form action="/document/delete/{{this._id}}" method="POST" onsubmit="return confirm('Bạn có chắc muốn xóa tài liệu này?')">
                      <button type="submit" class="btn btn-sm btn-outline-danger">
                        <i class="fas fa-trash me-1"></i>{{!Xóa}}
                      </button>
                    </form>
                  </td>
                </tr>
              {{else}}
                <tr>
                  <td colspan="4" class="text-center text-muted">Chưa có tài liệu nào.</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>
