<!-- Header Section with Gradient Background -->
<div class="document-header mb-3">
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h1 class="h3 fw-bold text-white mb-1">
          Tiến Độ Học Tập
        </h1>
        <p class="text-white-50 mb-0">Theo dõi tiến độ học tập của bạn</p>
      </div>
      {{!-- <div class="col-md-4 text-end">
        <div class="stats-card">
          <div class="stats-item">
            <i class="fas fa-award text-orange mb-1"></i>
            <span class="stats-number">{{totalCredits}}</span>
            <span class="stats-label">Tín chỉ</span>
          </div>
        </div>
      </div> --}}
    </div>
  </div>
</div>

<main class="container-fluid px-4">
  <div class="row g-4">
    <!-- Cột bên trái -->
    <div class="col-lg-6">
      <!-- Chart Card -->
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-gradient-gray text-white py-3">
          <h6 class="mb-0">iểu đồ tiến độ</h6>
        </div>
        <div class="card-body text-center p-3">
          <h6 class="text-dark mb-2">Tổng số tín chỉ đã hoàn thành</h5>
          <p class="h5 fw-bold text-orange mb-2">{{totalCredits}} / {{maxCredits}} tín chỉ</p>
          <canvas id="creditChart" ></canvas>

          {{#if totalCreditsExceeded}}
            <div class="alert alert-warning mt-2 mb-0 py-2" role="alert">
              <i class="fas fa-exclamation-triangle me-2"></i>Số tín chỉ vượt quá giới hạn cho phép!
            </div>
          {{/if}}
        </div>
      </div>

      <!-- Failed Subjects Card -->
      <div class="card shadow-sm border-0">
        <div class="card-header bg-gradient-gray text-white py-3">
          <h6 class="mb-0">
            Môn bị nợ (điểm F)
          </h6>
        </div>
        <div class="card-body p-3">
          {{!-- Trường hợp 1: chưa có học kỳ --}}
          {{#unless hasSemesters}}
            <div class="text-center py-3">
              <i class="fas fa-info-circle fa-2x text-muted mb-2"></i>
              <h6 class="text-muted">Bạn chưa có bản điểm để tính môn nợ</h6>
            </div>

          {{!-- Trường hợp 2: có học kỳ nhưng không có môn nợ --}}
          {{else if (not hasMonNo)}}
            <div class="text-center py-3">
              <h6 class="text-success">Bạn không bị nợ môn nào!</h6>
            </div>

          {{!-- Trường hợp 3: có môn nợ --}}
          {{else}}
            <div class="list-group list-group-flush">
              {{#each monNo}}
                <div class="list-group-item border-0 px-0 py-2">
                  <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    <div class="flex-grow-1">
                      <h6 class="mb-1">{{HocPhan.tenHocPhan}}</h6>
                      <small class="text-muted">
                        {{HocPhan.soTinChi}} tín chỉ | Điểm: {{diemSo}} ({{diemChu}})
                      </small>
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          {{/unless}}
        </div>
      </div>
    </div>

    <!-- Cột bên phải -->
    <div class="col-lg-6">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-header bg-gradient-gray text-white py-3">
          <h6 class="mb-0">Học phần đã hoàn thành</h6>
        </div>
        <div class="card-body p-3">
          {{#if scores.length}}
            <div class="list-group list-group-flush" style="max-height: 350px; overflow-y: auto;">
              {{#each scores}}
                <div class="list-group-item border-0 px-0 py-2">
                  <div class="d-flex align-items-center">
                    
                    <div class="flex-grow-1">
                      <h6 class="mb-1">{{HocPhan.tenHocPhan}}</h6>
                      <small class="text-muted">{{HocPhan.soTinChi}} tín chỉ</small>
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          {{else}}
            <div class="text-center py-3">
              
              <h6 class="text-muted">Chưa có học phần nào hoàn thành</h6>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</main>

<style>
#creditChart {
  max-width: 250px;
  max-height: 250px;
  margin: 0 auto;
  display: block;
}

</style>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const totalCredits = {{totalCredits}};
  const remainingCredits = 152 - totalCredits;

  const ctx = document.getElementById('creditChart').getContext('2d');
  new Chart(ctx, {
    type: 'doughnut',
    data: {
      labels: ['Đã hoàn thành', 'Còn lại'],
      datasets: [{
        label: 'Tín chỉ',
        data: [totalCredits, remainingCredits],
        backgroundColor: ['#4CAF50', '#e0e0e0'],
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: {
          position: 'bottom'
        }
      }
    }
  });
</script>