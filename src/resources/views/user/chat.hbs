              <div class="bg-secondary text-white d-inline-block p-3 rounded-3 shadow-sm" style="max-width: 70%;">
                <div class="mb-1">{{content}}</div>
                <small class="text-white-50">{{sender.name}} (Admin)</small>
              </div>
            </div>
          {{/if}}
        {{/each}}
