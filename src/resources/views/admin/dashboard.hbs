{{!< admin}}
<title>Admin - Hệ Thống Hỗ Trợ Quản Lý Tiến Độ Học Tập</title>

<div class="dashboard-header">
  <h3 class="dashboard-title mb-0 text-2xl">Dashboard Quản Trị</h3>
</div>

<main class="container py-4">
  <!-- Thống kê + Liên kết -->
  <div class="row g-4 mb-4">
    <!-- Tổng người dùng -->
    <div class="col-md-3 col-sm-6">
      <a href="/admin/users" class="text-decoration-none text-dark">
        <div class="card shadow-sm border-0">
          <div class="card-body d-flex justify-content-between align-items-start">
            <div class="rounded-circle bg-primary bg-opacity-10 p-3 d-flex align-items-center justify-content-center">
              <i class="fas fa-users text-primary fs-4"></i>
            </div>
            {{!-- <span class="text-success fw-semibold">+5%</span> --}}
          </div>
          <div class="card-body pt-0">
            <div class="fs-4 fw-bold">{{stats.totalUsers}}</div>
            <small class="text-muted">Tổng người dùng</small>
          </div>
        </div>
      </a>
    </div>

    <!-- Admin -->
    <div class="col-md-3 col-sm-6">
      <a href="/admin/users" class="text-decoration-none text-dark">
        <div class="card shadow-sm border-0">
          <div class="card-body d-flex justify-content-between align-items-start">
            <div class="rounded-circle bg-success bg-opacity-10 p-3 d-flex align-items-center justify-content-center">
              <i class="fas fa-user-shield text-success fs-4"></i>
            </div>
            {{!-- <span class="text-success fw-semibold">+12%</span> --}}
          </div>
          <div class="card-body pt-0">
            <div class="fs-4 fw-bold">{{stats.totalAdmins}}</div>
            <small class="text-muted">Admin</small>
          </div>
        </div>
      </a>
    </div>

    <!-- Tổng video -->
    <div class="col-md-3 col-sm-6">
      <a href="/admin/videos" class="text-decoration-none text-dark">
        <div class="card shadow-sm border-0">
          <div class="card-body d-flex justify-content-between align-items-start">
            <div class="rounded-circle bg-warning bg-opacity-10 p-3 d-flex align-items-center justify-content-center">
              <i class="fas fa-video text-warning fs-4"></i>
            </div>
            {{!-- <span class="text-success fw-semibold">+8%</span> --}}
          </div>
          <div class="card-body pt-0">
            <div class="fs-4 fw-bold">{{stats.totalVideos}}</div>
            <small class="text-muted">Tổng video</small>
          </div>
        </div>
      </a>
    </div>

    <!-- Tổng lượt đăng ký -->
    <div class="col-md-3 col-sm-6">
      <a href="/admin/videos" class="text-decoration-none text-dark">
        <div class="card shadow-sm border-0">
          <div class="card-body d-flex justify-content-between align-items-start">
            <div class="rounded-circle bg-warning bg-opacity-10 p-3 d-flex align-items-center justify-content-center">
              <i class="fas fa-chart-line text-purple-600 fs-4"></i>
            </div>
          </div>
          <div class="card-body pt-0">
            <div class="fs-4 fw-bold">{{totalRegisters}}</div>
            <small class="text-muted">lượt đăng ký</small>
          </div>
        </div>
      </a>
    </div>
  </div>


  <!-- Danh sách người dùng và video mới -->
  <div class="row g-4 mb-4">
    <div class="col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Người dùng mới</h5>
        </div>
        <div class="card-body p-3">
          <ul class="list-group list-group-flush">
            {{#each recentUsers}}
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <img src="{{this.avatar}}" alt="avatar" class="rounded-circle me-3" width="40" height="40">
                  <div>
                    <strong>{{this.username}}</strong><br>
                    <small class="text-muted">{{this.email}}</small>
                  </div>
                </div>
                <small>{{formatDate this.createdAt}}</small>
              </li>
            {{else}}
              <li class="list-group-item">Không có người dùng mới</li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
          <h5 class="mb-0">Video mới</h5>
        </div>
        <div class="card-body p-3">
          <ul class="list-group list-group-flush">
            {{#each recentVideos}}
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <strong>{{this.title}}</strong><br>
                  {{!-- <small class="text-muted">{{this.description}}</small> --}}
                </div>
                <small>{{formatDate this.createdAt}}</small>
              </li>
            {{else}}
              <li class="list-group-item">Không có video mới</li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="space-y-10 p-6 min-h-screen text-gray-800">

    {{#if error}}
      <div class="bg-red-100 text-red-700 px-4 py-3 rounded-lg border border-red-300">
        {{error}}
      </div>
    {{/if}}

    <!-- BIỂU ĐỒ (NHỎ, GỌN, TRUNG TÂM) -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

        <!-- LINE CHART -->
        <div class="bg-white p-6 rounded-2xl shadow border mb-6">
        <h2 class="text-lg font-semibold mb-4">Xu hướng đăng ký</h2>
        <div class="max-w-xl mx-auto">
            <canvas id="lineChart" height="120"></canvas>
        </div>
        </div>

        <!-- PIE CHART -->
        <div class="bg-white p-6 rounded-2xl shadow border mb-6">
        <h2 class="text-lg font-semibold mb-4">Tỷ lệ hoàn thành video</h2>
        <div class="max-w-xs mx-auto">
            <canvas id="pieChart" height="190"></canvas>
        </div>
        </div>

        <!-- BAR CHART -->
        <div class="bg-white p-6 rounded-2xl shadow border mb-6 lg:col-span-2">
        <h2 class="text-lg font-semibold mb-4">Thống kê theo chuyên ngành</h2>
        <div class="max-w-3xl mx-auto">
            <canvas id="barChart" height="150"></canvas>
        </div>
        </div>
    </div>
  </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
const growthLabels = {{json growthLabels}};
const growthValues = {{json growthValues}};

// Line chart
new Chart(document.getElementById('lineChart'), {
  type: 'line',
  data: {
    labels: growthLabels,
    datasets: [{
      label: "Lượt đăng ký",
      data: growthValues,
      borderWidth: 2,
      borderColor: '#2563eb',
      fill: false,
      tension: 0.3
    }]
  },
  options: {
    scales: {
      y: {
        ticks: {
          precision: 0,      // Không có số thập phân
          stepSize: 1,       // Nhảy theo 1 đơn vị
        }
      }
    }
  }
});

// Pie chart
new Chart(document.getElementById('pieChart'), {
  type: 'pie',
  data: {
    labels: ['Hoàn thành', 'Chưa hoàn thành'],
    datasets: [{
      data: [
        {{completedVideos}},
        {{totalVideos}} - {{completedVideos}}
      ],
    }]
  }
});

// Bar chart chuyên ngành
const majorLabels = {{json majorLabels}};
const majorValues = {{json majorValues}};

new Chart(document.getElementById('barChart'), {
  type: 'bar',
  data: {
    labels: majorLabels,
    datasets: [{
      label: 'Số học viên',
      data: majorValues,
      borderWidth: 1
    }]
  },
  options: {
    scales: {
      y: {
        ticks: {
          precision: 0,      // Không có số thập phân
          stepSize: 1,       // Nhảy theo 1 đơn vị
        }
      }
    }
  }
});
</script>