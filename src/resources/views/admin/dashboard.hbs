{{!< admin}}
<title>Admin - Hệ Thống Hỗ Trợ Quản Lý Tiến Độ Học Tập</title>
<div class="dashboard-header">
   <h3 class="dashboard-title mb-0">Dashboard Quản Trị</h3>
</div>

<main class="container py-4">
  <!-- Thống kê + Liên kết -->
  <div class="row g-4 mb-4">
    <div class="col-md-3 col-sm-6">
      <a href="/admin/users" class="text-decoration-none text-dark">
        <div class="card text-center shadow-sm h-100">
          <div class="card-body">
            <i class="fas fa-users fa-2x text-primary"></i>
            <h6 class="mt-2">Tổng người dùng</h6>
            <p class="fs-5 fw-bold">{{stats.totalUsers}}</p>
          </div>
        </div>
      </a>
    </div>

    <div class="col-md-3 col-sm-6">
      <a href="/admin/users" class="text-decoration-none text-dark">
        <div class="card text-center shadow-sm h-100">
          <div class="card-body">
            <i class="fas fa-user-shield fa-2x text-success"></i>
            <h6 class="mt-2">Admin</h6>
            <p class="fs-5 fw-bold">{{stats.adminUsers}}</p>
          </div>
        </div>
      </a>
    </div>

    <div class="col-md-3 col-sm-6">
      <a href="/admin/videos" class="text-decoration-none text-dark">
        <div class="card text-center shadow-sm h-100">
          <div class="card-body">
            <i class="fas fa-video fa-2x text-warning"></i>
            <h6 class="mt-2">Tổng video</h6>
            <p class="fs-5 fw-bold">{{stats.totalVideos}}</p>
          </div>
        </div>
      </a>
    </div>

    <div class="col-md-3 col-sm-6">
      <a href="/admin/videos" class="text-decoration-none text-dark">
        <div class="card text-center shadow-sm h-100">
          <div class="card-body">
            <i class="fas fa-trash fa-2x text-danger"></i>
            <h6 class="mt-2">Video đã xóa</h6>
            <p class="fs-5 fw-bold">{{stats.deletedVideos}}</p>
          </div>
        </div>
      </a>
    </div>
  </div>

  <!-- Danh sách người dùng và video mới -->
  <div class="row g-4 mb-4">
    <div class="col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Người dùng mới</h5>
        </div>
        <div class="card-body p-3">
          <ul class="list-group list-group-flush">
            {{#each recentUsers}}
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <img src="{{this.avatar}}" alt="avatar" class="rounded-circle me-3" width="40" height="40">
                  <div>
                    <strong>{{this.username}}</strong><br>
                    <small class="text-muted">{{this.email}}</small>
                  </div>
                </div>
                <small>{{formatDate this.createdAt}}</small>
              </li>
            {{else}}
              <li class="list-group-item">Không có người dùng mới</li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
          <h5 class="mb-0">Video mới</h5>
        </div>
        <div class="card-body p-3">
          <ul class="list-group list-group-flush">
            {{#each recentVideos}}
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <strong>{{this.title}}</strong><br>
                  <small class="text-muted">{{this.description}}</small>
                </div>
                <small>{{formatDate this.createdAt}}</small>
              </li>
            {{else}}
              <li class="list-group-item">Không có video mới</li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</main>
