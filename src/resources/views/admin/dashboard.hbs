{{!< admin}}
<title>Admin - Hệ Thống Hỗ Trợ Quản Lý Tiến Độ Học Tập</title>

<div class="dashboard-header">
    <h3 class="dashboard-title mb-0 text-2xl">Dashboard Quản Trị</h3>
</div>

<main class="container py-4">
  <!-- Thống kê + Liên kết -->
  <div class="row g-4 mb-4">
    <!-- Tổng người dùng -->
    <div class="col-md-3 col-sm-6">
      <a href="/admin/users" class="text-decoration-none text-dark">
        <div class="card shadow-sm border-0">
          <div class="card-body d-flex justify-content-between align-items-start">
            <div class="rounded-circle bg-primary bg-opacity-10 p-3 d-flex align-items-center justify-content-center">
              <i class="fas fa-users text-primary fs-4"></i>
            </div>
            <span class="text-success fw-semibold">+5%</span>
          </div>
          <div class="card-body pt-0">
            <div class="fs-4 fw-bold">{{stats.totalUsers}}</div>
            <small class="text-muted">Tổng người dùng</small>
          </div>
        </div>
      </a>
    </div>

    <!-- Admin -->
    <div class="col-md-3 col-sm-6">
      <a href="/admin/users" class="text-decoration-none text-dark">
        <div class="card shadow-sm border-0">
          <div class="card-body d-flex justify-content-between align-items-start">
            <div class="rounded-circle bg-success bg-opacity-10 p-3 d-flex align-items-center justify-content-center">
              <i class="fas fa-user-shield text-success fs-4"></i>
            </div>
            <span class="text-success fw-semibold">+12%</span>
          </div>
          <div class="card-body pt-0">
            <div class="fs-4 fw-bold">{{stats.adminUsers}}</div>
            <small class="text-muted">Admin</small>
          </div>
        </div>
      </a>
    </div>

    <!-- Tổng video -->
    <div class="col-md-3 col-sm-6">
      <a href="/admin/videos" class="text-decoration-none text-dark">
        <div class="card shadow-sm border-0">
          <div class="card-body d-flex justify-content-between align-items-start">
            <div class="rounded-circle bg-warning bg-opacity-10 p-3 d-flex align-items-center justify-content-center">
              <i class="fas fa-video text-warning fs-4"></i>
            </div>
            <span class="text-success fw-semibold">+8%</span>
          </div>
          <div class="card-body pt-0">
            <div class="fs-4 fw-bold">{{stats.totalVideos}}</div>
            <small class="text-muted">Tổng video</small>
          </div>
        </div>
      </a>
    </div>

    <!-- Video đã xóa -->
    <div class="col-md-3 col-sm-6">
      <a href="/admin/videos" class="text-decoration-none text-dark">
        <div class="card shadow-sm border-0">
          <div class="card-body d-flex justify-content-between align-items-start">
            <div class="rounded-circle bg-danger bg-opacity-10 p-3 d-flex align-items-center justify-content-center">
              <i class="fas fa-trash text-danger fs-4"></i>
            </div>
            <span class="text-danger fw-semibold">-3%</span>
          </div>
          <div class="card-body pt-0">
            <div class="fs-4 fw-bold">{{stats.deletedVideos}}</div>
            <small class="text-muted">Video đã xóa</small>
          </div>
        </div>
      </a>
    </div>
  </div>


  <!-- Danh sách người dùng và video mới -->
  <div class="row g-4 mb-4">
    <div class="col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Người dùng mới</h5>
        </div>
        <div class="card-body p-3">
          <ul class="list-group list-group-flush">
            {{#each recentUsers}}
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <img src="{{this.avatar}}" alt="avatar" class="rounded-circle me-3" width="40" height="40">
                  <div>
                    <strong>{{this.username}}</strong><br>
                    <small class="text-muted">{{this.email}}</small>
                  </div>
                </div>
                <small>{{formatDate this.createdAt}}</small>
              </li>
            {{else}}
              <li class="list-group-item">Không có người dùng mới</li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
          <h5 class="mb-0">Video mới</h5>
        </div>
        <div class="card-body p-3">
          <ul class="list-group list-group-flush">
            {{#each recentVideos}}
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <strong>{{this.title}}</strong><br>
                  <small class="text-muted">{{this.description}}</small>
                </div>
                <small>{{formatDate this.createdAt}}</small>
              </li>
            {{else}}
              <li class="list-group-item">Không có video mới</li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</main>
