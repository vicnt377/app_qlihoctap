
{{!< auth}}
<title>Đổi Mật Khẩu - Hệ Thống Quản Lý Tiến Độ Học Tập</title>
<style>
    body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: Arial, sans-serif;
        }
        .reset-container {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            width: 100%;
            min-width: 300px;
            text-align: center;
        }
        h2 {
            text-align: center;
            color: #005dba;
            margin-bottom: 20px;
        }
        .form-control {
            border-radius: 25px;
            padding: 10px;
            text-align: center;
        }
        .btn-reset {
            background: #005dba;
            color: white;
            font-weight: bold;
            border-radius: 25px;
            padding: 10px;
            transition: transform 0.2s;
        }
        .btn-reset:hover {
            transform: scale(1.05);
            background: #005dba;
            color: white;
        }
        .icon {
            font-size: 20px;
            margin-right: 10px;
        }
</style>

<body>
    <div class="reset-container">
        <h2>Đặt Lại Mật Khẩu</h2>
        {{#if messages.error}}
            <div class="alert alert-danger">{{messages.error}}</div>
        {{/if}}
        {{#if messages.success}}
            <div class="alert alert-success">{{messages.success}}</div>
        {{/if}}
        <form method="POST" action="/reset-password">
            <div class="mb-3 input-group">
                <span class="input-group-text"><i class="fas fa-user icon"></i></span>
                <input type="text" class="form-control" name="username" placeholder="Tên đăng nhập" required>
            </div>
            <div class="mb-3 input-group">
                <span class="input-group-text"><i class="fas fa-lock icon"></i></span>
                <input type="password" class="form-control" name="password" placeholder="Mật khẩu mới" required>
            </div>
            <button type="submit" class="btn btn-reset btn-sm px-3">Cập nhật mật khẩu</button>
        </form>
    </div>
</body>

