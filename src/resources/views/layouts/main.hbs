 <script>
        // H√†m t·∫£i th√¥ng b√°o
        async function loadNotifications() {
            try {
                const response = await fetch('/notifications/user');
                const data = await response.json();
                
                if (!data.success) {
                    console.error('API error:', data.message);
                    return;
                }
                
                const notifications = data.data.notifications;
                
                const notificationList = document.getElementById('notificationList');
                const notificationBadge = document.getElementById('notificationBadge');
                
                if (notifications.length === 0) {
                    notificationList.innerHTML = `
                        <div class="empty-state">
                            <i class="fas fa-bell-slash"></i>
                            <p>Kh√¥ng c√≥ th√¥ng b√°o m·ªõi</p>
                        </div>
                    `;
                    notificationBadge.style.display = 'none';
                } else {
                    const unreadCount = notifications.filter(n => !n.isRead).length;
                    
                    if (unreadCount > 0) {
                        notificationBadge.textContent = unreadCount;
                        notificationBadge.style.display = 'block';
                    } else {
                        notificationBadge.style.display = 'none';
                    }
                    
                    notificationList.innerHTML = notifications.map(notification => {
                        // X√°c ƒë·ªãnh icon v√† m√†u s·∫Øc d·ª±a tr√™n lo·∫°i th√¥ng b√°o
                        let iconClass = 'fas fa-info-circle';
                        let iconType = 'info';
                        
                        if (notification.type === 'welcome') {
                            iconClass = 'fas fa-hand-wave';
                            iconType = 'welcome';
                        } else if (notification.type === 'success') {
                            iconClass = 'fas fa-check-circle';
                            iconType = 'success';
                        } else if (notification.type === 'warning') {
                            iconClass = 'fas fa-exclamation-triangle';
                            iconType = 'warning';
                        } else if (notification.type === 'error') {
                            iconClass = 'fas fa-times-circle';
                            iconType = 'danger';
                        }
                        
                        // T√≠nh th·ªùi gian t∆∞∆°ng ƒë·ªëi
                        const timeAgo = getTimeAgo(new Date(notification.createdAt));
                        
                        return `
                            <li class="notification-item ${notification.isRead ? 'read' : 'unread'}" data-id="${notification._id}">
                                <a href="#" class="notification-link" onclick="markAsRead('${notification._id}')">
                                    <div class="notification-content">
                                        <div class="notification-icon ${iconType}">
                                            <i class="${iconClass}"></i>
                                        </div>
                                        <div class="notification-text">
                                            <div class="notification-title">${notification.title || 'Th√¥ng b√°o m·ªõi'}</div>
                                            <div class="notification-message">${notification.message}</div>
                                            <div class="notification-time">${timeAgo}</div>
                                        </div>
                                    </div>
                                </a>
                            </li>
                        `;
                    }).join('');
                }
            } catch (error) {
                console.error('L·ªói khi t·∫£i th√¥ng b√°o:', error);
            }
        }

        // H√†m ƒë√°nh d·∫•u t·∫•t c·∫£ ƒë√£ ƒë·ªçc
        async function markAllAsRead() {
            try {
                await fetch('/notifications/mark-all-read', { method: 'PATCH' });
                loadNotifications();
            } catch (error) {
                console.error('L·ªói khi ƒë√°nh d·∫•u ƒë√£ ƒë·ªçc:', error);
            }
        }

        // H√†m ƒë√°nh d·∫•u m·ªôt th√¥ng b√°o ƒë√£ ƒë·ªçc
        async function markAsRead(notificationId) {
            try {
                await fetch(`/notifications/${notificationId}/read`, { method: 'PATCH' });
                loadNotifications();
            } catch (error) {
                console.error('L·ªói khi ƒë√°nh d·∫•u ƒë√£ ƒë·ªçc:', error);
            }
        }

        // H√†m t√≠nh th·ªùi gian t∆∞∆°ng ƒë·ªëi
        function getTimeAgo(date) {
            const now = new Date();
            const diff = now - date;
            const minutes = Math.floor(diff / 60000);
            const hours = Math.floor(diff / 3600000);
            const days = Math.floor(diff / 86400000);

            if (minutes < 1) return 'V·ª´a xong';
            if (minutes < 60) return `${minutes} ph√∫t tr∆∞·ªõc`;
            if (hours < 24) return `${hours} gi·ªù tr∆∞·ªõc`;
            return `${days} ng√†y tr∆∞·ªõc`;
        }

        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            // Load notifications khi trang load
            loadNotifications();
            
            // Event listener cho n√∫t "ƒê√°nh d·∫•u ƒë√£ ƒë·ªçc"
            const markAllReadBtn = document.getElementById('markAllRead');
            if (markAllReadBtn) {
                markAllReadBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    markAllAsRead();
                });
            }
        });

        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            loadNotifications();
            
            // ƒê√°nh d·∫•u t·∫•t c·∫£ ƒë√£ ƒë·ªçc
            document.getElementById('markAllRead').addEventListener('click', function(e) {
                e.preventDefault();
                markAllAsRead();
            });
            
            // ƒê√°nh d·∫•u t·ª´ng th√¥ng b√°o ƒë√£ ƒë·ªçc
            document.addEventListener('click', function(e) {
                if (e.target.closest('.notification-item')) {
                    const notificationItem = e.target.closest('.notification-item');
                    const notificationId = notificationItem.dataset.id;
                    markAsRead(notificationId);
                }
            });
        });

        // T·∫£i l·∫°i th√¥ng b√°o m·ªói 30 gi√¢y
        setInterval(loadNotifications, 30000);
        </script>
