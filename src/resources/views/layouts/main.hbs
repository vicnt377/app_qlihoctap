<script>
  const socket = io();

  // Khi user load trang, join v√†o room c·ªßa h·ªç
  document.addEventListener('DOMContentLoaded', () => {
    fetch('/notifications/user')
      .then(res => res.json())
      .then(data => {
        if (data.success && data.data && data.data.notifications) {
          const userId = '{{user._id}}'; // L·∫•y t·ª´ server-side
          if (userId) {
            socket.emit('join', userId);
          }
        }
      });

    // Nh·∫≠n th√¥ng b√°o m·ªõi realtime
    socket.on('new-notification', (n) => {
      const badge = document.getElementById('notificationBadge');
      const list = document.getElementById('notificationList');

      // TƒÉng s·ªë badge
      let count = parseInt(badge.textContent || '0') + 1;
      badge.style.display = 'inline';
      badge.textContent = count;

      // T·∫°o item m·ªõi
      const item = document.createElement('li');
      item.className = 'notification-item unread';
      item.dataset.id = n._id;
      item.dataset.title = n.title || 'Th√¥ng b√°o m·ªõi';
      item.dataset.message = n.message;
      item.dataset.time = getTimeAgo(new Date(n.createdAt));

      item.innerHTML = `
        <div class="dropdown-item py-2 notification-content">
          <div class="d-flex align-items-start">
            <div class="notification-icon me-2">
              <i class="fas fa-info-circle text-primary"></i>
            </div>
            <div class="flex-grow-1">
              <div class="d-flex justify-content-between align-items-start mb-1">
                <span class="fw-semibold text-system-dark">${n.title || 'Th√¥ng b√°o m·ªõi'}</span>
                <span class="badge bg-system-primary badge-sm">M·ªõi</span>
              </div>
              <p class="mb-0 small text-system-muted">${n.message}</p>
              <small class="text-system-muted">${item.dataset.time}</small>
            </div>
          </div>
        </div>
      `;

      // X√≥a th√¥ng b√°o tr·ªëng
      if (list.querySelector('.fa-bell-slash')) {
        list.innerHTML = '';
      }

      list.prepend(item);
    });

    // Load th√¥ng b√°o l·∫ßn ƒë·∫ßu
    loadNotifications();

    // ƒê√°nh d·∫•u t·∫•t c·∫£ ƒë√£ ƒë·ªçc
    const markAllReadBtn = document.getElementById('markAllRead');
    if (markAllReadBtn) {
      markAllReadBtn.addEventListener('click', function(e) {
        e.preventDefault();
        markAllAsRead();
      });
    }

    // Khi click v√†o 1 th√¥ng b√°o ‚Üí m·ªü modal + ƒë√°nh d·∫•u ƒë√£ ƒë·ªçc
    document.addEventListener('click', function(e) {
      const item = e.target.closest('.notification-item');
      if (item) {
        const notificationId = item.dataset.id;
        const title = item.dataset.title;
        const message = decodeURIComponent(item.dataset.message);
        const time = item.dataset.time;

        // L·∫•y type t·ª´ data
        const type = item.dataset.type || 'info';
        const typeConfig = getNotificationTypeConfig(type);

        // G√°n v√†o modal
        document.getElementById('notifTitle').textContent = title;
        document.getElementById('notifMessage').textContent = message;
        document.getElementById('notifTime').textContent = time;

        // üî• ƒê·ªïi icon theo lo·∫°i
        const notifIcon = document.querySelector('#notificationModal .modal-body i');
        notifIcon.className = `${typeConfig.icon} ${typeConfig.color} fa-lg`;

        // Hi·ªán modal
        const notifModal = new bootstrap.Modal(document.getElementById('notificationModal'));
        notifModal.show();

        // ƒê√°nh d·∫•u ƒë√£ ƒë·ªçc
        markAsRead(notificationId);
      }
    });

    // T·∫£i l·∫°i th√¥ng b√°o m·ªói 30 gi√¢y
    setInterval(loadNotifications, 30000);
  });


  // H√†m t·∫£i th√¥ng b√°o
  async function loadNotifications() {
    try {
      const response = await fetch('/notifications/user');
      const data = await response.json();

      const notificationList = document.getElementById('notificationList');
      const notificationBadge = document.getElementById('notificationBadge');

      if (!data.success) {
        console.error('API error:', data.message);
        return;
      }

      const notifications = data.data.notifications;

      if (notifications.length === 0) {
        notificationList.innerHTML = `
          <div class="text-center py-5">
            <div class="empty-notification">
              <i class="fas fa-bell-slash fa-3x text-muted mb-3"></i>
              <h6 class="text-muted mb-2">Kh√¥ng c√≥ th√¥ng b√°o m·ªõi</h6>
              <p class="text-muted small mb-0">B·∫°n s·∫Ω nh·∫≠n ƒë∆∞·ª£c th√¥ng b√°o khi c√≥ tin m·ªõi</p>
            </div>
          </div>
        `;
        notificationBadge.style.display = 'none';
      } else {
        const unreadCount = notifications.filter(n => !n.isRead).length;
        if (unreadCount > 0) {
          notificationBadge.textContent = unreadCount;
          notificationBadge.style.display = 'block';
        } else {
          notificationBadge.style.display = 'none';
        }

        // üî• Dropdown ch·ªâ hi·ªán ti√™u ƒë·ªÅ + th·ªùi gian, kh√¥ng hi·ªán message
        notificationList.innerHTML = notifications.map(notification => {
          const typeConfig = getNotificationTypeConfig(notification.type);
          const readClass = notification.isRead ? 'read' : 'unread';
          const timeAgo = getTimeAgo(new Date(notification.createdAt));

          return `
            <li class="notification-item ${readClass}" 
                data-id="${notification._id}" 
                data-title="${notification.title}" 
                data-message='${encodeURIComponent(notification.message)}'
                data-document-title="${notification.metadata?.documentTitle || ''}" 
                data-time="${timeAgo}"
                data-type="${notification.type}">
              <div class="dropdown-item py-2 notification-content">
                <div class="d-flex align-items-start">
                  <div class="notification-icon me-2">
                    <i class="${typeConfig.icon}"></i>
                  </div>
                  <div class="flex-grow-1">
                    <div class="d-flex justify-content-between align-items-start mb-1">
                      <span class="fw-semibold ${notification.isRead ? 'text-system-muted' : 'text-system-dark'}">
                        ${notification.title || 'Th√¥ng b√°o m·ªõi'}
                      </span>
                      ${!notification.isRead ? '<span class="badge bg-system-primary badge-sm">M·ªõi</span>' : ''}
                    </div>
                    {{!-- <p class="mb-0 small text-system-muted">${notification.message || ''}</p> --}}
                    <small class="text-system-muted">${timeAgo}</small>
                  </div>
                </div>
              </div>
            </li>
          `;
        }).join('');
      }
    } catch (error) {
      console.error('L·ªói khi t·∫£i th√¥ng b√°o:', error);
    }
  }

// Khi nh·∫≠n th√¥ng b√°o realtime
socket.on('new-notification', (n) => {
  const badge = document.getElementById('notificationBadge');
  const list = document.getElementById('notificationList');

  let count = parseInt(badge.textContent || '0') + 1;
