<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title > Hệ Thống Quản Lý Tiến Độ Học Tập</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
  <style>
    body {
      margin: 0;
      font-family: 'Inter', 'Roboto', 'Segoe UI', sans-serif;
      background: linear-gradient(150deg, #667eea, #764ba2,  #667eea, #764ba2);
      height: 100vh;
      justify-content: center;
      align-items: center;
      color: white;
    }
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      background-color: rgba(0, 0, 0, 0.85);
      padding-top: 60px;
      transition: width 0.3s;
      z-index: 1000;
    }

    .sidebar.collapsed {
      width: 60px;
    }

    .sidebar.expanded {
      width: 240px;
    }

    .sidebar a {
      color: white;
      padding: 12px 20px;
      display: flex;
      align-items: center;
      gap: 12px;
      font-size: 16px;
      transition: background 0.3s;
      text-decoration: none;
    }

    .sidebar a:hover {
      background-color: #495057;
      border-radius: 8px;
    }

    .sidebar .sidebar-text {
      display: none;
    }

    .sidebar.expanded .sidebar-text {
      display: inline;
    }

    .toggle-btn {
      position: fixed;
      top: 10px;
      left: 10px;
      z-index: 1100;
    }

    .content {
      margin-left: 60px;
      padding: 20px;
      transition: margin-left 0.3s;
    }

    .content.shifted {
      margin-left: 240px;
    }

    .card-box {
      background-color: white;
      color: #333;
      border: none;
      border-radius: 15px;
      padding: 25px;
      text-align: center;
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .card-box:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .card-icon {
      font-size: 36px;
      margin-bottom: 10px;
    }

    @media (max-width: 768px) {
      .sidebar.expanded {
        width: 100%;
        height: auto;
        position: relative;
      }
      .content.shifted {
        margin-left: 0;
      }
    }
  </style>
</head>
<body>
  <!-- Toggle Button -->
  <button class="btn btn-dark toggle-btn" id="toggleSidebar">
    <i class="fas fa-bars">Quản Lý Học Tập</i>
  </button>

  <!-- Sidebar -->

  <nav id="sidebar" class="sidebar collapsed  ">
    <a href="/home"><i class="fas fa-home"></i> <span class="sidebar-text">Trang Chủ</span></a>
    <a href="/document"><i class="fas fa-file"></i><span class="sidebar-text">Tài Liệu</span></a>
    <a href="/course"><i class="fas fa-book"></i> <span class="sidebar-text">Học Phần</span></a>
    <a href="/progress"><i class="fas fa-chart-line"></i> <span class="sidebar-text">Tiến Độ</span></a>
    <a href="/semester"><i class="fas fa-calendar-alt"></i> <span class="sidebar-text">Lịch Học</span></a>
    <a href="/score"><i class="fas fa-graduation-cap"></i> <span class="sidebar-text">Kết Quả</span></a>
    <a href="/video"><i class="fas fa-video"></i> <span class="sidebar-text">Các Khóa Học Tham Khảo</span></a>
    <a href="/account"><i class="fas fa-user"></i> <span class="sidebar-text">Tài Khoản</span></a>
  </nav>

  <!-- Content -->
  <main id="mainContent" class="content">
    {{{body}}}
  </main>

  <!-- Script -->
  <script>
    const sidebar = document.getElementById('sidebar');
    const content = document.getElementById('mainContent');
    const toggleBtn = document.getElementById('toggleSidebar');

    toggleBtn.addEventListener('click', () => {
      sidebar.classList.toggle('collapsed');
      sidebar.classList.toggle('expanded');
      content.classList.toggle('shifted');
    });
  </script>
</body>
</html>
