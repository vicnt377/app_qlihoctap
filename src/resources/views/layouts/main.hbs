<script src="/socket.io/socket.io.js"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
  const socket = io();

  // Khi user load trang, join vào room của họ
  fetch('/notifications/user') // API trả thông báo của user hiện tại
    .then(res => res.json())
    .then(data => {
      if (data.success && data.data && data.data.notifications) {
        // Join vào room với user ID từ session
        const userId = '{{user._id}}'; // Lấy từ server-side
        if (userId) {
          socket.emit('join', userId);
        }
      }
    });

  // Nhận thông báo mới
  socket.on('new-notification', (n) => {
    const badge = document.getElementById('notificationBadge');
    const list = document.getElementById('notificationList');

    // Tăng số badge
    let count = parseInt(badge.textContent || '0') + 1;
    badge.style.display = 'inline';
    badge.textContent = count;

    // Thêm thông báo mới lên đầu danh sách
    const item = document.createElement('a');
    item.href = '#';
    item.className = 'dropdown-item small';
    item.innerHTML = `
      <div class="d-flex">
        <div class="me-2"><i class="fas fa-info-circle text-primary"></i></div>
        <div>
          <div>${n.message}</div>
          <small class="text-muted">${new Date(n.createdAt).toLocaleString()}</small>
        </div>
      </div>
    `;

    // Xóa "Không có thông báo" nếu có
    if (list.querySelector('.fa-bell-slash')) {
      list.innerHTML = '';
    }

    list.prepend(item);
  });
});
</script>
 <script>
        // Hàm tải thông báo
        async function loadNotifications() {
            try {
                const response = await fetch('/notifications/user');
                const data = await response.json();
                
                if (!data.success) {
                    console.error('API error:', data.message);
                    return;
                }
                
                const notifications = data.data.notifications;
                
                const notificationList = document.getElementById('notificationList');
                const notificationBadge = document.getElementById('notificationBadge');
                
                if (notifications.length === 0) {
                    notificationList.innerHTML = `
                        <div class="text-center py-5">
                            <div class="empty-notification">
                                <i class="fas fa-bell-slash fa-3x text-muted mb-3"></i>
                                <h6 class="text-muted mb-2">Không có thông báo mới</h6>
                                <p class="text-muted small mb-0">Bạn sẽ nhận được thông báo khi có tin mới</p>
                            </div>
                        </div>
                    `;
                    notificationBadge.style.display = 'none';
                } else {
                    const unreadCount = notifications.filter(n => !n.isRead).length;
                    
                    if (unreadCount > 0) {
                        notificationBadge.textContent = unreadCount;
                        notificationBadge.style.display = 'block';
                    } else {
                        notificationBadge.style.display = 'none';
                    }
                    
                    notificationList.innerHTML = notifications.map(notification => {
                        // Xác định icon và màu sắc dựa trên loại thông báo
                        const typeConfig = getNotificationTypeConfig(notification.type);
                        const readClass = notification.isRead ? 'read' : 'unread';
                        
                        // Tính thời gian tương đối
                        const timeAgo = getTimeAgo(new Date(notification.createdAt));
                        
                        return `
                            <li class="notification-item ${readClass}" data-id="${notification._id}">
                                <div class="dropdown-item py-2 notification-content" onclick="markAsRead('${notification._id}')">
                                    <div class="d-flex align-items-start">
                                        <div class="notification-icon me-2">
                                            <i class="${typeConfig.icon} ${typeConfig.color}"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-start mb-1">
                                                <span class="fw-semibold ${notification.isRead ? 'text-system-muted' : 'text-system-dark'}">
                                                    ${notification.title || 'Thông báo mới'}
                                                </span>
                                                ${!notification.isRead ? '<span class="badge bg-system-primary badge-sm">Mới</span>' : ''}
                                            </div>
                                            <p class="mb-0 small text-system-muted">${notification.message}</p>
                                            <small class="text-system-muted">${timeAgo}</small>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        `;
                    }).join('');
                }
            } catch (error) {
                console.error('Lỗi khi tải thông báo:', error);
            }
        }

        // Hàm đánh dấu tất cả đã đọc
        async function markAllAsRead() {
            try {
                await fetch('/notifications/mark-all-read', { method: 'PATCH' });
                loadNotifications();
            } catch (error) {
                console.error('Lỗi khi đánh dấu đã đọc:', error);
            }
        }

        // Hàm đánh dấu một thông báo đã đọc
        async function markAsRead(notificationId) {
            try {
                await fetch(`/notifications/${notificationId}/read`, { method: 'PATCH' });
                loadNotifications();
            } catch (error) {
                console.error('Lỗi khi đánh dấu đã đọc:', error);
            }
        }

        // Hàm tính thời gian tương đối
        function getTimeAgo(date) {
            const now = new Date();
            const diff = now - date;
            const minutes = Math.floor(diff / 60000);
            const hours = Math.floor(diff / 3600000);
            const days = Math.floor(diff / 86400000);

            if (minutes < 1) return 'Vừa xong';
            if (minutes < 60) return `${minutes} phút trước`;
            if (hours < 24) return `${hours} giờ trước`;
            return `${days} ngày trước`;
        }

        // Hàm lấy cấu hình loại thông báo
        function getNotificationTypeConfig(type) {
            const configs = {
                welcome: { icon: 'fas fa-hand-wave', color: 'text-info' },
                success: { icon: 'fas fa-check-circle', color: 'text-success' },
                warning: { icon: 'fas fa-exclamation-triangle', color: 'text-warning' },
                error: { icon: 'fas fa-times-circle', color: 'text-danger' },
                info: { icon: 'fas fa-info-circle', color: 'text-info' }
            };
            return configs[type] || configs.info;
        }

        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            // Load notifications khi trang load
            loadNotifications();
            
            // Event listener cho nút "Đánh dấu đã đọc"
            const markAllReadBtn = document.getElementById('markAllRead');
            if (markAllReadBtn) {
                markAllReadBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    markAllAsRead();
                });
            }
        });

        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            loadNotifications();
            
            // Đánh dấu tất cả đã đọc
            document.getElementById('markAllRead').addEventListener('click', function(e) {
                e.preventDefault();
                markAllAsRead();
            });
            
            // Đánh dấu từng thông báo đã đọc
            document.addEventListener('click', function(e) {
                if (e.target.closest('.notification-item')) {
                    const notificationItem = e.target.closest('.notification-item');
                    const notificationId = notificationItem.dataset.id;
                    markAsRead(notificationId);
                }
            });
        });

        // Tải lại thông báo mỗi 30 giây
        setInterval(loadNotifications, 30000);
        </script>
