<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Hệ Thống Quản Lý Tiến Độ Học Tập</title>
  <link rel="icon" href="/img/background/EDU.png?v=1.0" type="image/png">

  <!-- Font & Library -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      background-color: #f0f2f5;
    }

    .toggle-btn {
      position: fixed;
      top: 12px;
      left: 12px;
      z-index: 1100;
      background: #005dba;
      color: white;
      border: none;
      padding: 8px 12px;
      border-radius: 6px;
      cursor: pointer;
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      width: 220px;
      background-color: #ffffff;
      border-right: 1px solid #e0e0e0;
      transition: width 0.3s;
      z-index: 1000;
    }

    .sidebar.collapsed {
      width: 60px;
    }

    .sidebar .sidebar-header {
      padding: 20px;
      font-size: 20px;
      font-weight: 600;
      color: #005dba;
      white-space: nowrap;
    }

    .sidebar a {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 12px 20px;
      color: #005dba;
      text-decoration: none;
      transition: 0.3s;
      font-size: 15px;
      white-space: nowrap;
    }

    .sidebar a:hover {
      background-color: #005dba;
      color: #fff;
      border-radius: 8px;
    }

    .sidebar .sidebar-text {
      transition: opacity 0.3s;
    }

    .sidebar.collapsed .sidebar-text {
      opacity: 0;
      visibility: hidden;
    }

    .content {
      margin-left: 220px;
      transition: margin-left 0.3s;
      padding: 25px;
    }

    .content.shifted {
      margin-left: 60px;
    }

    .dashboard-header {
      background: #fff;
      padding: 15px 25px;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
      margin-bottom: 30px;
    }

    .dashboard-title {
      font-size: 20px;
      color: #005dba;
    }

    .footer {
      text-align: center;
      padding: 10px;
      font-size: 14px;
      color: #888;
    }
  </style>
</head>

<body>
  <!-- Toggle Sidebar Button -->
  <button id="toggleSidebar" class="toggle-btn">
    <i class="fas fa-bars"></i>
  </button>

  <!-- Sidebar -->
  <nav id="sidebar" class="sidebar collapsed">
    <div class="sidebar-header"></div>
    <a href="/admin/dashboard"><i class="fas fa-home"></i><span class="sidebar-text">Dashboard</span></a>
    <a href="/admin/users"><i class="fas fa-user-graduate"></i><span class="sidebar-text">Học Viên</span></a>
    <a href="/admin/videos"><i class="fas fa-video"></i><span class="sidebar-text">Khóa Học</span></a>
    <a href="/admin/chat"><i class="fas fa-comment-dots"></i><span class="sidebar-text">Hộp Thư</span></a>
    <a href="/admin/statistic"><i class="fas fa-chart-line"></i><span class="sidebar-text">Thống Kê</span></a>
    <a href="/logout"><i class="fas fa-sign-out-alt text-danger"></i><span class="sidebar-text text-danger">Đăng Xuất</span></a>
  </nav>

  <!-- Main Content -->
  <main id="mainContent" class="content shifted">
    {{{body}}}
  </main>

  <!-- Footer -->
  <div class="footer">© 2025 - Hệ Thống Quản Lý Tiến Độ Học Tập</div>

  <!-- Scripts -->
  <script>
    const sidebar = document.getElementById('sidebar');
    const content = document.getElementById('mainContent');
    const toggleBtn = document.getElementById('toggleSidebar');

    toggleBtn.addEventListener('click', () => {
      const collapsed = sidebar.classList.contains('collapsed');
      if (collapsed) {
        sidebar.classList.remove('collapsed');
        content.classList.remove('shifted');
      } else {
        sidebar.classList.add('collapsed');
        content.classList.add('shifted');
      }
    });

    // Default: collapsed sidebar
    sidebar.classList.add('collapsed');
    content.classList.add('shifted');
  </script>
</body>
</html>
